<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" >
    <Panel 
        headerText="Painel"
        expandable="true"
        expanded="true" >
        <content>
            <Table 
                id="tabel" 
                items="{ path: 'produto>/Produtos' }" >
                <columns>
                    <Column>
                        <header>
                            <Text text="{i18n>status}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>nomeProd}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>qtd}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>preco}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>nomeRmt}" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectStatus 
                                icon="{= ${produto>Status} === 'A' ? 'sap-icon://accept' :
                                         ${produto>Status} === 'B' ? 'sap-icon://alert'  :
                                         'sap-icon://error'}" 
                                state="{= ${produto>Status} === 'A' ? 'Success' :
                                          ${produto>Status} === 'B' ? 'Warning'  :
                                         'Error'}" />

                            <ObjectIdentifier text="{produto>ProductName}" />
                            <ObjectNumber number="{produto>Quantity}" />
                            <ObjectNumber number="R$ {produto>ExtendedPrice}" />
                            <ObjectIdentifier text="{produto>ShipperName}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Panel>
</core:FragmentDefinition>